        olympians[0][3] = "Rachel";
        olympians[1][3] = "F";
        olympians[2][3] = "21";
        //-----------------------------------------
        olympians[0][4] = "Joe";
        olympians[1][4] = "M";
        olympians[2][4] = "39";
        //-----------------------------------------
        olympians[0][5] = "Regina";
        olympians[1][5] = "F";
        olympians[2][5] = "51";
        //-----------------------------------------
        olympians[0][6] = "Tommy";
        olympians[1][6] = "M";
        olympians[2][6] = "25";
        //-----------------------------------------
        olympians[0][7] = "Sarah";
        olympians[1][7] = "F";
        olympians[2][7] = "9";
        //-----------------------------------------
        olympians[0][8] = "Ryan";
        olympians[1][8] = "M";
        olympians[2][8] = "21";
        //-----------------------------------------
        olympians[0][9] = "Casey";
        olympians[1][9] = "F";
        olympians[2][9] = "18";
        //-----------------------------------------
        olympians[0][10] = "Billy";
        olympians[1][10] = "F";
        olympians[2][10] = "26";
        //-----------------------------------------
        olympians[0][11] = "Noah";
        olympians[1][11] = "M";
        olympians[2][11] = "35";
