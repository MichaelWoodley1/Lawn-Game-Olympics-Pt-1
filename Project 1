package com.company;

import java.io.*; //FileReader and the BufferedReader
import java.util.ArrayList;

public class Main {

    static String[] events;
    static String[][] olympians;

    public static void main(String[] args) {

        createEvents();
        createOlympians();

        //Display Application Name
        System.out.println("Lawn Game Olympics");

        //set buffer to keyboard
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

        //Reads user input and stores it as newString
        String newString ="";
        try {
            newString = br.readLine();
        } catch (IOException ioe) {
            System.out.println("Not a string");
        }

        newString = newString.toLowerCase();

        if (newString.equals("events") || newString.equals("e")) {
            listEvents();
        } else if (newString.equals("olympians") || newString.equals("o")) {
            listOlympians();
        }  else if (newString.equals("help") || newString.equals("h")) {
                listHelp();
        } else {
            System.out.println("invalid input");
        }

    }//end main method

    //initializes the list of events for the day
    public static void createEvents() {
        events = new String[6];
        events[0] = "Washoo";
        events[1] = "CamJam";
        events[2] = "Horsehoes";
        events[3] = "Cornhole";
        events[4] = "Ladderball";
        events[5] = "Stickgame";
    }//end method

    //Display the list of Olympians for the day
    public static void listEvents() {

        for (int i = 0; i < events.length; i++) {
            System.out.println(events[i]);
        }
    }//end method

    public static void createOlympians() {
        olympians = new String[3][16];
        olympians[0][0] = "Mike";
